<h1>List of all Movies</h1>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
      Details
    </th>
  </tr>

<% @list_of_movies.each do |movie| %>
    <tr>
      <td>
        <%= movie.id %>
      </td>

      <td>
        <img src=<%= movie.image %>>
      </td>

      <td>
        <%= movie.title %>
      </td>

      <td>
        <%= movie.year %>
      </td>

      <td>
        <% @movie_director = @list_of_directors.where({ :id => movie.director_id }) %>
        <%= @movie_director.at(0).name %>
      </td>

      <td>
        <a href="/movies/<%= movie.id %>">Show details</a>
      </td>
    </tr>
  <% end %>
  </table>

<hr>

<h2>
  Add a new movie
  <small>(Building this form is not required. It's an optional stretch goal; but, you have the tools if you want to give it a try.)</small>
</h2>

<form action="/insert_movie">
  <div>
    <label for="name_box">
      Name
    </label>

    <input type="text" id="name_box" name="query_name">
  </div>

  <div>
    <label for="dob_box">
      Dob
    </label>

    <input type="date" id="dob_box" name="query_dob">
  </div>

  <div>
    <label for="bio_box">
      Bio
    </label>

    <textarea id="bio_box" name="query_bio" rows="3"></textarea>
  </div>

  <div>
    <label for="image_box">
      Image
    </label>

    <input type="text" id="image_box" name="query_image">
  </div>

  <button>
    Create movie
  </button>
</form>
