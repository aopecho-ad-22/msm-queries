<h1>List of all directors</h1>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      DOB
    </th>

    <th>
    </th>
  </tr>

<% @list_of_directors.each do |director| %>
    <tr>
      <th>
        <%= @director.id %>
      </th>

      <th>
        <%= @director.image %>
      </th>

      <th>
        <%= @director.name %>
      </th>

      <th>
        <%= @director.dob %>
      </th>
    </tr>
  </table>

<hr>

<h2>
  Add a new director
  <small>(Building this form is not required. It's an optional stretch goal; but, you have the tools if you want to give it a try.)</small>
</h2>

<form action="/insert_director">
  <div>
    <label for="name_box">
      Name
    </label>

    <input type="text" id="name_box" name="query_name">
  </div>

  <div>
    <label for="dob_box">
      Dob
    </label>

    <input type="date" id="dob_box" name="query_dob">
  </div>

  <div>
    <label for="bio_box">
      Bio
    </label>

    <textarea id="bio_box" name="query_bio" rows="3"></textarea>
  </div>

  <div>
    <label for="image_box">
      Image
    </label>

    <input type="text" id="image_box" name="query_image">
  </div>

  <button>
    Create director
  </button>
</form>
